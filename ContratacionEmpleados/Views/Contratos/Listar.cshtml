@model IEnumerable<ContratacionEmpleados.Models.ViewModels.VwListarContrato>

@{
    ViewBag.Title = "Listar";
}

<h2>Contratos activos</h2>
@using (Html.BeginForm("Buscar", "Contratos", FormMethod.Post))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
        <div class="form-group">
            <label for="fechai">Fecha inicio</label>
            <input type="date" class="form-control" id="fechai" name="fechai">
        </div>
        <div class="form-group">
            <label for="fechaf">Fecha final</label>
            <input type="date" class="form-control" id="fechaf" name="fechaf">
        </div>
        <button type="submit" class="btn btn-default">Buscar</button>
   


    <table class="table table-bordered table-responsive">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipoContrato)
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreArea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreCargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreTipoContrato)
                </td>

            </tr>
        }

    </table>
}
